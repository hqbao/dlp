<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="/bootstrap/js/bootstrap.js"></script>
  <title>DLP - Sign In</title>
</head>
<body>
  <div class="container-fluid" style="background-color: #006666; height: 100vh;padding-top: 10%;">
    <div class="row">
      <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div style="text-align: center;font-size: 32px;font-weight: bolder;margin-bottom: 8px;color: white;">DEEP LEARNING PLATFORM</div>
        <div class="card">
          <div class="card-body">
            <h4 class="text-center">Sign in</h4>
            <small class="form-text text-muted">Don't have account? Please <a href="/sign-up">sign up</a>!</small>
            <small class="form-text text-muted">Forgot PIN? Please <a href="#" onclick="alert('Coming soon!');">reset PIN</a>!</small>
            <form method="post" action="">
              <div class="form-group">
                <label>Email address</label>
                <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
              </div>
              <div class="form-group">
                <label>PIN</label>
                <input name="password" type="password" class="form-control" placeholder="PIN" value="">
                <small id="errorMessage" style="color: maroon;"></small>
              </div>
              <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    const emailRegexp = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;
    var form = document.querySelector('form');
    form.onsubmit = function() {
      document.getElementById('errorMessage').innerHTML = '';

      var email = document.getElementsByName("email")[0].value;
      if (!email || !emailRegexp.test(email)) {
        document.getElementById('errorMessage').innerHTML = 'Invalid email';
        return false;
      }

      var password = document.getElementsByName("password")[0].value;
      if (!password || password.length < 6) {
        document.getElementById('errorMessage').innerHTML = 'Invalid password';
        return false;
      }

      var jBdyStr = JSON.stringify({
        email: email,
        password: password,
      });
      
      var http = new XMLHttpRequest();
      http.open('POST', 'https://ai-designer.io/api/user/login', true);
      http.setRequestHeader('Content-type', 'application/json');
      http.onreadystatechange = function() {
        if(http.readyState == 4) {
          var msg = JSON.parse(http.responseText);
          if (msg.msgCode == 1000) {
            localStorage.setItem('TOKEN', msg.msgResp.token);
            var redirectUrl = localStorage.getItem('REDIRECT_URL');
            if (redirectUrl) { location.href = redirectUrl; }
            else { location.href = '/'; }
          }
          else {
            document.getElementById('errorMessage').innerHTML = msg.msgResp;
          }
        }
      }
      http.send(jBdyStr);
      return false;
    }
  </script>
</body>
</html>